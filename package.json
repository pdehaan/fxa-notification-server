{
  "name": "fxa-notification-server",
  "description": "This is an experimental hub service for handling account event notifications in the Firefox Accounts ecosystem.  Service Providers will be able to use it to publish notifications of various events, and Reliers will be able to use it to subscribe to said notifications.",
  "version": "1.0.0",
  "author": "Mozilla (https://mozilla.org/)",
  "bugs": "https://github.com/mozilla/fxa-notification-server/issues",
  "dependencies": {
    "convict": "0.6.1",
    "hapi": "8.2.0",
    "joi": "5.1.0",
    "mozlog": "1.0.2"
  },
  "devDependencies": {
    "grunt": "0.4.5",
    "grunt-contrib-jshint": "0.11.0",
    "grunt-copyright": "0.1.0",
    "grunt-nsp-shrinkwrap": "0.0.3",
    "lab": "5.2.1",
    "load-grunt-tasks": "3.1.0"
  },
  "directories": {
    "doc": "docs"
  },
  "homepage": "https://github.com/mozilla/fxa-notification-server",
  "keywords": [
    "fxa"
  ],
  "license": "MPL 2.0",
  "repository": "mozilla/fxa-notification-server",
  "scripts": {
    "lint": "grunt",
    "outdated": "npm outdated --depth 0",
    "postshrinkwrap": "grunt validate-shrinkwrap --force",
    "shrinkwrap": "npm shrinkwrap --dev",
    "test": "echo \"Error: no test specified\" && exit 1"
  }
}
